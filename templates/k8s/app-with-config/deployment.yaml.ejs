apiVersion: apps/v1
kind: Deployment
metadata:
  name: <%= name %>
  namespace: <%= namespace %>
spec:
  replicas: 2
  selector:
    matchLabels: { app: <%= name %> }
  template:
    metadata: { labels: { app: <%= name %> } }
    spec:
      containers:
        - name: <%= name %>
          image: <%= image %>
          ports: [{ containerPort: <%= port %> }]
          envFrom:
            - configMapRef: { name: <%= name %>-cfg }
            - secretRef: { name: <%= name %>-sec }
