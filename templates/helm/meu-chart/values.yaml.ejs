replicaCount: <%= replicaCount %>

image:
  repository: <%= image.split(':')[0] %>
  tag: "<%= image.split(':')[1] || 'latest' %>"

service:
  type: ClusterIP
  port: <%= servicePort %>

ingress:
  enabled: <%= ingressEnabled %>
  className: "nginx"
  hosts:
    - host: <%= host %>
      paths:
        - path: /
          pathType: Prefix
  tls:
    - hosts: [<%= host %>]
      secretName: <%= name %>-tls
